

<div class ="container portfolio-container">
  <div class ="row">
    <div class "col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main')%>
    </div>
    
    
    <div class "col-md-5">
      <h1> <%= @portfolio_item.title %> </h1>
      <hr>
      
      <em>  <%= @portfolio_item.subtitle %> </em>
      <p> <%= @portfolio_item.body %> </p>
      <hr>
      <h3> Technology Used:</h3>
      <% @portfolio_item.technologies.each do |t| %>
      <p>
      <%= t.name %>  
      </p>
      <% end %>
      
      <% if logged_in?(:site_admin) %>
      <div class=''>
        <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>

      
      <div class="btn btn-danger">
      <%=link_to "Delete",portfolio_path(@portfolio_item.id), :method => :delete, :class => "delete", :confirm => "Are you sure ?"%>  
      </div>
          </div>
    
      <% end %>
    </div>
  </div>
</div>

